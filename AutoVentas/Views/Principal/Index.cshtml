@model IEnumerable<AutoVentas.Models.Vehiculo>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-top:20px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="Images/supra.jpg" alt="supra">
            </div>

            <div class="item">
                <img src="Images/bugatti.jpg" alt="buggati">
            </div>

            <div class="item">
                <img src="Images/ferrarispider.jpg" alt="spider">
            </div>

            <div class="item">
                <img src="Images/ferrari.jpg" alt="ferrari">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row"style="margin-top:20px;margin-bottom:20px;">
        @foreach (var item in Model)
            {
            <div class="col-sm-4 col-md-3" style="margin-bottom:20px">
                <div class="thumbnail">
                    @if (item.archivos.Any(f => f.tipo == TipoArchivo.JPG))
                {

                        <img src="~/Archivo/ObtenerArchivo?id=@item.archivos.First(f => f.tipo == AutoVentas.Models.TipoArchivo.JPG).idArchivo" style="width: 180px ;height: 140px " class="img-rounded" alt="imagen" />
                    }
                    <div class="caption">
                        <h3 style="text-align:center">@Html.DisplayFor(valor => item.Marca.proveedor)</h3>
                        <p style="text-align:center">
                            <strong>Linea: </strong> @Html.DisplayFor(modelItem => item.Linea.nombreLinea)<br>
                            <strong>#Motor: </strong> @Html.DisplayFor(modelItem => item.numeroMotor)<br>
                            <strong>IdModelo: </strong>@Html.DisplayFor(modelItem => item.Modelo.año)<br>
                            <strong>Tipo:</strong>@Html.DisplayFor(modelItem => item.Tipo.nombre)<br>
                            <strong>Color:</strong>@Html.DisplayFor(modelItem => item.color)<br>
                        </p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
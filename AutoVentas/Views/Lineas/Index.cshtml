@model IEnumerable<AutoVentas.Models.Linea>

@{
    ViewBag.Title = "Index";
}

<h2>Lineas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreLinea)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreLinea)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.LineaID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.LineaID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.LineaID })
        </td>
    </tr>
}

</table>
